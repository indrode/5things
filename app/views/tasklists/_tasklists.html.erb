<tr>
	<td class="title"><%= item.id == current_user.current_list ? '<small style="color:#aa0000; font-size:10px;">active</small> ' : '' %><%= h item.title %></td>
	<td class="taskcount"><%= item.tasks_count %></td>
	<td class="security"><%= item.security == 1 ? 'public <small>(<a href="/share/' + item.key + '">view</a>)</small>' : 'private' %></td>
	<td class="key"><%= h item.key %></td>
	<td class="legend"><%= link_to t("lists.edit"), :action => 'edit', :id => item.id %> <%= item.id == current_user.current_list ? '' : ' | <a href="/tasklists/' + item.id.to_s + '/destroy" class="confirm">' + t("lists.remove") +'</a>' %></td>	
</tr>