<tr>
  <td class="title"><%= item.active == 0 ? '<small style="color:#87421F; font-size:10px;">'.html_safe + t("lists.disabled") + '</small> '.html_safe : '' %><%= item.id == current_user.current_list ? '<small style="color:#aa0000; font-size:10px;">'.html_safe + t("lists.active") + '</small> '.html_safe : '' %><%= h item.title %></td>
  <td class="taskcount"><%= item.tasks_count %></td>
  <td class="security"><%= item.security == 1 ? 'public <small>(<a href="/share/'.html_safe + item.key + '">view</a>)</small>'.html_safe : 'private' %></td>
  <td class="key"><%= h item.key %></td>
  <td class="legend"><%= link_to t("lists.edit"), :action => 'edit', :id => item.id %> <%= item.id == current_user.current_list ? '' : ' | <a href="/tasklists/'.html_safe + item.id.to_s + '/destroy" class="confirm">'.html_safe + t("lists.remove") +'</a>'.html_safe %></td>  
</tr>